    %><%= formatLine(row.total+'X '+row.name, formatCurrency(row.price), line)
    %><% 
    if(row.modifier.length > 0){ 
        %>
<%          let i =0;
            row.modifier.forEach(function(rec){  
                i++;
                if (rec.descl != '') { 
    %><%=           formatLine('   + '+rec.descl, formatCurrency(rec.price), line)+( ( i < row.modifier.length ) ? "\n":"");
    %><%            
                } 
            }); 
    %><%
    }
    %>
<% }); %>

