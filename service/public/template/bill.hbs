{{center company.name line}}
{{center company.company line}}
{{center company.address line}}
{{center company.street line}}
{{center company.city line}} 
{{center (concat "Telp :" company.tel) line}}
 
{{#if (eq copyBill.total 1)}}
{{center "[ COPY BILL ]" line}}
{{/if}}
{{formatLine "BILL" transaction.bill line}}
{{formatLine "CASHIER " transaction.employeeName line}}
{{formatLine "START DATE" transaction.startDate line}}
{{#if transaction.endDate}}
{{formatLine "END DATE" transaction.endDate line}}
{{/if}}
{{#if transaction.tableName}}
{{formatLine "TABLE" transaction.tableName line}}
{{/if}}
{{formatLine "COVER " (formatCurrency transaction.cover) line}}
{{#if (gt totalGroup 1)}}
{{formatLine "GROUP " data.groups line}}
{{/if}} 

{{#each data.cart}}
{{formatLine (concat this.total "X " this.name) (formatCurrency this.totalAmount) line}}
    {{#if this.modifier}}
        {{#each this.modifier}}
            {{#if (eq this.type "MODIFIER")}}
{{formatLine (concat "   + " this.descl) (formatCurrency this.price) line}}
            {{/if}}
        {{/each}}
    {{/if}}
{{/each}}
 
{{formatLine " ITEM TOTAL" (formatCurrency data.itemTotal) line}}
{{#if data.subgroupDiscount}}
    {{#each data.subgroupDiscount}}
{{formatLine (concat "   " this.note) (formatCurrency (concat "-" this.totalAmount)) line}}
    {{/each}}  
{{/if}}
{{formatLine " SUB TOTAL" (formatCurrency data.subTotal) line}} 
{{#if data.scGroup}}
    {{#each data.scGroup}}
{{formatLine (concat "   " this.note) (formatCurrency this.totalAmount) line}}
    {{/each}} 
{{/if}}
{{#if data.taxGroup}}
    {{#each data.taxGroup}}
{{formatLine (concat "   " this.note) (formatCurrency this.totalAmount) line}}
    {{/each}}
{{/if}}
{{formatLine " TOTAL" (formatCurrency data.total) line}}

{{repeat "-" line}}
