<%- include('./global/header') %>

<%
  var reportData = report || {};
  var payload = reportData.data || {};
  var rows = Array.isArray(payload.items) ? payload.items : [];
  var summary = payload.summary || {};
%>

<% if (rows.length) { %>
    

  <table class="table table-sm">
    <thead>
      <tr>
        <th style="width:140px;">Periode</th>
        <th class="right" style="width:120px;">Item Sales</th>
        <th class="right" style="width:120px;">Discount</th>
        <th class="right" style="width:120px;">Net Sales</th>
        <th class="right" style="width:120px;">Tax</th>
        <th class="right" style="width:120px;">Service Charge</th>
        <th class="right" style="width:140px;">Gross Sales</th>
        <th class="right" style="width:100px;">Checks</th>
        <th class="right" style="width:100px;">Covers</th>
        <th class="right" style="width:140px;">Avg / Check</th>
        <th class="right" style="width:140px;">Avg / Cover</th>
        <th class="right" style="width:120px;">% Item Sales</th>
        <th class="right" style="width:120px;">% Net Sales</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(function(row) { %>
        <tr>
          <td><%= row.timePeriod %></td>
          <td class="right"><%= formatNumber(row.itemSales) %></td>
          <td class="right"><%= formatNumber(row.discount) %></td>
          <td class="right"><%= formatNumber(row.NetSales) %></td>
          <td class="right"><%= formatNumber(row.tax) %></td>
          <td class="right"><%= formatNumber(row.sc) %></td>
          <td class="right"><%= formatNumber(row.grossSales) %></td>
          <td class="right"><%= formatNumber(row.checks) %></td>
          <td class="right"><%= formatNumber(row.covers) %></td>
          <td class="right"><%= formatNumber(row.avgSalesPerChecks) %></td>
          <td class="right"><%= formatNumber(row.avgSalesPerCovers) %></td>
          <td class="right"><%= (row.percentItemSales || '0.00') %>%</td>
          <td class="right"><%= (row.percentNetSales || '0.00') %>%</td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <section style="margin-bottom:24px;">
    <header style="margin-bottom:8px;">
      <h2 style="font-size:16px; font-weight:600; margin:0;">Ringkasan Penjualan</h2>
    </header>
    <table class="table table-sm" style="max-width:520px;">
      <tbody>
        <tr><td>Total Item Sales</td><td class="right"><%= formatNumber(summary.totalItemSales) %></td></tr>
        <tr><td>Total Discount</td><td class="right"><%= formatNumber(summary.totalDiscount) %></td></tr>
        <tr><td>Total Net Sales</td><td class="right"><%= formatNumber(summary.totalNetSales) %></td></tr>
        <tr><td>Total Tax</td><td class="right"><%= formatNumber(summary.totalTax) %></td></tr>
        <tr><td>Total Service Charge</td><td class="right"><%= formatNumber(summary.totalSc) %></td></tr>
        <tr><td>Total Gross Sales</td><td class="right"><%= formatNumber(summary.totalGrossSales) %></td></tr>
        <tr><td>Total Checks</td><td class="right"><%= formatNumber(summary.totalChecks) %></td></tr>
        <tr><td>Total Covers</td><td class="right"><%= formatNumber(summary.totalCovers) %></td></tr>
        <tr><td>Average Sales / Check</td><td class="right"><%= formatNumber(summary.avgSalesPerChecks) %></td></tr>
        <tr><td>Average Sales / Cover</td><td class="right"><%= formatNumber(summary.avgSalesPerCovers) %></td></tr>
      </tbody>
    </table>
  </section>
<% } else { %>
  <p>Tidak ada data untuk ditampilkan.</p>
<% } %>

<%- include('./global/footer') %>
